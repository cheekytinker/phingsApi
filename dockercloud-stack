api:
  autoredeploy: true
  environment:
    - PHINGSAPI_DB_HOST=db
  image: 'cheekytinker/phingsapi:latest'
  links:
    - db
    - messaging
  ports:
    - '10010:10010'
db:
  command: '--storageEngine wiredTiger'
  image: 'mongo:latest'
  ports:
    - '27017:27017'
  volumes:
    - /data/mongo
messaging:
  image: 'rabbitmq:3-management'
  ports:
    - '5672:5672'
    - '15672:15672'

